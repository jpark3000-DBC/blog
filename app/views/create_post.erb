<div class="container">
  <h1>Create Post</h1>

  <form action="/create_post" method="post">
    <p>Title:</p>
    <input type="text" name="post[title]">
    <p>Content:</p>
    <textarea rows="4" cols="50" name="post[body]"></textarea>
    <p>Author:</p>
    <input type="text" name="post[author]"><br><br>
    <input type="submit" value="submit">
  </form>
</div>

